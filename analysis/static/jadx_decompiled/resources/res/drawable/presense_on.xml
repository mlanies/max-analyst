<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/presense_bg">
        <shape android:shape="oval">
            <size
                android:height="10dp"
                android:width="10dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>
    <item
        android:id="@+id/presense_accent"
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <size
                android:height="10dp"
                android:width="10dp"/>
            <solid android:color="#0ff"/>
        </shape>
    </item>
</layer-list>
