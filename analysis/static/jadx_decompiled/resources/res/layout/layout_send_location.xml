<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp">
    <androidx.constraintlayout.widget.Group
        android:id="@+id/layout_send_location__live_group"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="         layout_send_location__tv_pick_duration,         layout_send_location__cancel_button,         layout_send_location__cp_duration"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/font_small"
        android:typeface="normal"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/layout_send_location__tv_pick_duration"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/live_location_choose_time"
        android:maxLines="1"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/layout_send_location__cancel_button"
        android:background="@null"
        android:padding="4dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_cross_16"
        android:scaleType="fitCenter"
        android:contentDescription="@string/cancel"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/layout_send_location__cp_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:chipSpacing="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_send_location__send_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_send_location__tv_pick_duration"
        app:singleLine="true"
        app:singleSelection="true">
        <com.google.android.material.chip.Chip
            android:textSize="12sp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/layout_send_location__duration_20m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            app:textEndPadding="8dp"
            app:textStartPadding="8dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:textSize="12sp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/layout_send_location__duration_1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            app:textEndPadding="8dp"
            app:textStartPadding="8dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:textSize="12sp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/layout_send_location__duration_3h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            app:textEndPadding="8dp"
            app:textStartPadding="8dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:textSize="12sp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/layout_send_location__duration_24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            app:textEndPadding="8dp"
            app:textStartPadding="8dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
        <com.google.android.material.chip.Chip
            android:textSize="12sp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/layout_send_location__duration_no_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live_location_time_no_limit"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            app:textEndPadding="8dp"
            app:textStartPadding="8dp"
            style="@style/Widget.MaterialComponents.Chip.Choice"/>
    </com.google.android.material.chip.ChipGroup>
    <one.me.sdk.uikit.common.button.OneMeTitleSubtitleButton
        android:id="@+id/layout_send_location__send_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/send_live_location"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
