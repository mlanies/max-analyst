<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/act_local_medias__bottom_toolbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@+id/act_local_medias__preview">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/local_media_toolbox__content"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/local_media_toolbox__separator_bottom">
        <FrameLayout
            android:id="@+id/local_media_toolbox__quality_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:minWidth="44dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/local_media_toolbox__quality_text"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textAllCaps="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/local_media_toolbox__quality_progress"
                android:visibility="visible"
                android:layout_width="14dp"
                android:layout_height="14dp"
                style="?android:attr/progressBarStyleSmall"/>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/local_media_toolbox__trim_btn"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_file_cut_24"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/local_media_toolbox__quality_container"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/local_media_toolbox__mute_btn"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_sound_on_24"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/local_media_toolbox__trim_btn"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/local_media_toolbox__photo_crop_btn"
            android:visibility="gone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_crop_24"
            android:scaleType="center"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/local_media_toolbox__photo_edit_btn"
            android:visibility="gone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_marker_24"
            android:scaleType="center"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/local_media_toolbox__photo_crop_btn"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:layout_gravity="end|center_vertical"
            android:id="@+id/local_media_toolbox__fl_select"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ru.ok.messages.media.mediabar.NumericCheckButton
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/local_media_toolbox__btn_select"
                android:padding="0dp"
                android:clickable="false"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:maxLines="1"
                android:textAlignment="gravity"/>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/local_media_toolbox__btn_apply"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_check_24"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/local_media_toolbox__separator_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
