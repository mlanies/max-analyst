<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">
        <ru.ok.messages.views.widgets.TamAvatarView
            android:id="@+id/row_setting_contact__av_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:placeHolder="@drawable/ava_m_40"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/row_setting_contact__av_view"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/row_setting_contact__av_view"
            layout="@layout/ll_contact"/>
    </RelativeLayout>
    <View
        android:id="@+id/row_setting__small_separator"
        android:background="@color/gray_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:id="@+id/row_setting__separator"
        android:background="@color/gray_separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>
