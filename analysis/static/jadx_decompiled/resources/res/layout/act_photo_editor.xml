<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/act_photo_editor__root"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_photo_editor__rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/act_photo_editor__btn_close"
            android:background="@null"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cross_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/act_photo_editor__btn_undo"
            android:background="@null"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_undo_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/act_photo_editor__btn_close"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/act_photo_editor__btn_clear"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/photo_editor_drawing_clear"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/act_photo_editor__btn_sticker"
            app:layout_constraintStart_toEndOf="@+id/act_photo_editor__btn_undo"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/act_photo_editor__btn_sticker"
            android:background="@null"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_draw_sticker_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/act_photo_editor__btn_done"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/act_photo_editor__btn_done"
            android:background="@null"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_check_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/act_photo_editor__rl_controls"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@+id/act_photo_editor__rl_buttons">
        <ru.ok.tamtam.photoeditor.view.colorselector.ColorSelectorView
            android:id="@+id/act_photo_editor__view_color_selector"
            android:paddingLeft="4dp"
            android:paddingRight="12dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="42dp"
            android:overScrollMode="never"
            android:paddingStart="4dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="42dp"/>
        <FrameLayout
            android:id="@+id/act_photo_editor__fl_line_width"
            android:background="@drawable/circle_white"
            android:padding="3dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:elevation="2dp">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/act_photo_editor__btn_line_width"
                android:background="@null"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_marker_thickness_24"
                android:tint="#fff"/>
        </FrameLayout>
    </RelativeLayout>
    <ru.ok.tamtam.photoeditor.view.EditorSurfaceViewContainer
        android:id="@+id/act_photo_editor__editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/act_photo_editor__rl_controls"
        android:layout_alignParentTop="true"/>
    <ru.ok.tamtam.photoeditor.view.BrushWidthViewImpl
        android:id="@+id/act_photo_editor__view_brush_width"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginRight="8dp"
        android:layout_above="@+id/act_photo_editor__rl_controls"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:elevation="4dp"/>
</RelativeLayout>
