<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/row_setting_led__ll_root"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/font_normal"
            android:id="@+id/row_setting_led__title"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/huge_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/huge_horizontal_margin"
            android:layout_alignParentStart="true"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/row_setting_led__cb_check"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/huge_horizontal_margin"
            android:minHeight="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/huge_horizontal_margin"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/row_setting_led__ll_led_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/row_setting_led__separator_small"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"/>
        <ru.ok.messages.settings.view.LedSeekBar
            android:id="@+id/row_setting_led__ls_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
    <View
        android:id="@+id/row_setting__separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>
