<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/view_audio_listen__btn_close"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_outline_24"
        android:contentDescription="@string/audio_record_cancel"/>
    <LinearLayout
        android:id="@+id/view_audio_listen__container"
        android:padding="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_weight="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="6dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/view_audio_listen__btn_play"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/audio_record_play"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/view_audio_listen__progress"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminate="true"/>
        <ru.ok.messages.views.widgets.audiowave.AudioWaveView
            android:layout_gravity="center_vertical"
            android:id="@+id/view_audio_listen__wave"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center_vertical"
            android:id="@+id/view_audio_listen__tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/view_audio_listen__btn_send"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/audio_record_send"
        android:layout_marginStart="6dp"/>
</merge>
