<?xml version="1.0" encoding="utf-8"?>
<ru.ok.utils.widgets.RoundedRectFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.ok.messages.views.widgets.VideoThumbnailView
        android:layout_gravity="center"
        android:id="@+id/view_auto_play_video_player__iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ru.ok.messages.video.widgets.VideoView
        android:layout_gravity="center"
        android:id="@+id/view_auto_play_video_player__v_video"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ru.ok.messages.video.widgets.VideoPlayerSeekBar
        android:gravity="center"
        android:layout_gravity="bottom"
        android:id="@+id/view_auto_play_video_player__sb_seek"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:seekBarEnable="false"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_gravity="end|top"
        android:id="@+id/view_auto_play_video_player__ib_sound"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@+id/view_auto_play_video_player__progress"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"/>
</ru.ok.utils.widgets.RoundedRectFrameLayout>
